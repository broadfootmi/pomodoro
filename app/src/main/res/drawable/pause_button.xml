<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:state_pressed="true"
        android:state_enabled="true"
        app:state_resume="false"
        android:drawable="@drawable/ic_pause_pressed_24dp" />

    <item
        android:state_pressed="false"
        android:state_enabled="true"
        app:state_resume="false"
        android:drawable="@drawable/ic_pause_unpressed_24dp" />

    <item
        android:state_enabled="false"
        app:state_resume="false"
        android:drawable="@drawable/ic_pause_disabled_24dp" />

    <item
        android:state_pressed="true"
        android:state_enabled="true"
        app:state_resume="true"
        android:drawable="@drawable/ic_play_arrow_pressed_24dp" />

    <item
        android:state_pressed="false"
        android:state_enabled="true"
        app:state_resume="true"
        android:drawable="@drawable/ic_play_arrow_unpressed_24dp" />

    <item
        android:state_enabled="false"
        app:state_resume="true"
        android:drawable="@drawable/ic_play_arrow_disabled_24dp" />


</selector>